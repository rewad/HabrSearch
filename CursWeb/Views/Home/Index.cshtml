
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href='@Url.Content("/content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <style type="text/css">
        #fkbx {
            background-color: #fff;
            border: 1px solid rgb(185,185,185);
            border-radius: 1px;
            border-top-color: rgb(160,160,160);
            cursor: text;
            display: inline-block;
            font: 18px arial,sans-serif;
            height: 38px;
            line-height: 36px;
            max-width: 672px;
            position: relative;
            width: 618px;
        }

        #submit {
            font: 18px arial,sans-serif;
            cursor: pointer;
            width: 90px;
            height: 41px;
            line-height: 0;
            background: no-repeat #820f0e center;
            border: 1px solid #3079ED;
            -moz-border-radius: 2px;
            -webkit-border-radius: 2px;
        }



        #btn {
            border: none;
            font-family: inherit;
            font-size: inherit;
            color: inherit;
            background: none;
            cursor: pointer;
            padding: 12px 40px;
            display: inline-block;
            margin: px 30px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
            outline: none;
            position: relative;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            transition: all 0.3s;
            background: #cb4e4e;
            color: #fff;
            box-shadow: 0 6px #ab3c3c;
            -webkit-transition: none;
            -moz-transition: none;
            transition: none;
            border-radius: 5px;
            box-shadow: 6px 0 #ab3c3c;
        }

        }
    </style>
    <center>
        <title>Index</title>
    </center>
</head>

<body>
    <link href='@Url.Content("/content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/scripts/jquery-1.6.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/scripts/jquery-ui-1.11.4.min.js")' type="text/javascript"></script>
    <div align="center" style="margin-top:289px">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <input type="hidden" />
            <input type="text" name="textq" class id="fkbx" value='@ViewData["test"]'  data-autocomplete-source='@Url.Action("AutocompleteSearch", "Home")'/>
            <input type="submit" class id="btn" value="Найти" />
        }
    </div>
    <script type="text/javascript">
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
        });
    });
    </script>
</body>
</html>
